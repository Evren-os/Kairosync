{
  "theme": {
    "mode": "dark",
    "dark": "Matte Black",
    "light": "Catppuccin Latte"
  },
  "buffer_font_family": "Iosevka Nerd Font Mono",
  "buffer_font_size": 15.5,
  "buffer_font_weight": 400,
  "buffer_line_height": "comfortable",
  "buffer_font_features": {
    "calt": true,
    "liga": true
  },
  "ui_font_size": 15,
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "font_size": 14,
    "font_features": {
      "calt": true,
      "liga": true
    },
    "line_height": "standard",
    "ensure_final_newline_on_save": false,
    "blinking": "terminal_controlled",
    "cursor_shape": "block",
    "copy_on_select": false,
    "keep_selection_on_copy": true,
    "dock": "bottom",
    "default_width": 800,
    "default_height": 400,
    "working_directory": "current_project_directory",
    "button": true,
    "alternate_scroll": "on",
    "option_as_meta": false,
    "scroll_multiplier": 3.0,
    "max_scroll_history_lines": 10000,
    "minimum_contrast": 0,
    "shell": {
      "program": "fish"
    },
    "env": {
      "EDITOR": "zed --wait",
      "VISUAL": "zed --wait",
      "TERM": "xterm-256color"
    },
    "toolbar": {
      "breadcrumbs": true
    },
    "scrollbar": {
      "show": "auto"
    },
    "detect_venv": {
      "on": {
        "directories": [
          ".env",
          "env",
          ".venv",
          "venv"
        ],
        "activate_script": "fish"
      }
    }
  },
  "tab_size": 2,
  "hard_tabs": false,
  "soft_wrap": "editor_width",
  "preferred_line_length": 100,
  "cursor_shape": "underline",
  "cursor_blink": true,
  "current_line_highlight": "all",
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 1,
    "coloring": "fixed",
    "background_coloring": "disabled"
  },
  "colorize_brackets": true,
  "linked_edits": true,
  "use_autoclose": true,
  "use_auto_surround": true,
  "jsx_tag_auto_close": {
    "enabled": true
  },
  "hover_popover_enabled": true,
  "hover_popover_delay": 300,
  "auto_signature_help": false,
  "scroll_sensitivity": 2.0,
  "fast_scroll_sensitivity": 5.0,
  "vertical_scroll_margin": 3,
  "horizontal_scroll_margin": 5,
  "minimap": {
    "show": "never"
  },
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_text": true,
    "selected_symbol": true,
    "diagnostics": "all"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 500
    }
  },
  "format_on_save": "on",
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/node_modules",
    "**/target",
    "**/.next",
    "**/dist",
    "**/.astro",
    "**/build",
    "**/.cache"
  ],
  "preview_tabs": {
    "enabled": false,
    "enable_preview_from_file_finder": false,
    "enable_preview_from_project_panel": false
  },
  "close_on_file_delete": true,
  "features": {
    "edit_prediction_provider": "none"
  },
  "disable_ai": true,
  "gutter": {
    "line_numbers": true,
    "runnables": true,
    "breakpoints": true,
    "folds": true
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history",
    "show_close_button": "hover",
    "show_diagnostics": "errors"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
    "selections_menu": true,
    "code_actions": true
  },
  "status_bar": {
    "active_language_button": true,
    "cursor_position_button": true,
    "line_endings_button": false
  },
  "project_panel": {
    "button": true,
    "dock": "right",
    "default_width": 240,
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "auto_reveal_entries": true,
    "auto_fold_dirs": false,
    "indent_size": 20,
    "entry_spacing": "comfortable",
    "indent_guides": {
      "show": "always"
    },
    "scrollbar": {
      "show": "auto"
    }
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 500,
      "show_commit_summary": false
    },
    "hunk_style": "staged_hollow"
  },
  "show_completions_on_input": true,
  "show_completion_documentation": true,
  "completions": {
    "words": "fallback",
    "lsp": true
  },
  "search": {
    "button": true,
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": false
  },
  "use_smartcase_search": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "restore_on_startup": "last_session",
  "session": {
    "restore_unsaved_buffers": true
  },
  "auto_install_extensions": {
    "catppuccin": true,
    "astro": true,
    "biome": true,
    "toml": true,
    "nu": true,
    "svelte": true,
    "emmet": true,
    "basher": true,
    "cargotom": true,
    "html": true
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        },
        "cargo": {
          "allFeatures": true
        },
        "procMacro": {
          "enable": true
        },
        "inlayHints": {
          "bindingModeHints": {
            "enable": true
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        }
      }
    },
    "gopls": {
      "initialization_options": {
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    },
    "biome": {
      "settings": {
        "require_config_file": false
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "format": {
            "enable": true
          },
          "validate": true,
          "hover": true,
          "completion": true
        }
      }
    }
  },
  "languages": {
    "Rust": {
      "tab_size": 4,
      "formatter": "language_server",
      "format_on_save": "on",
      "preferred_line_length": 100
    },
    "Go": {
      "tab_size": 4,
      "hard_tabs": true,
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "TypeScript": {
      "tab_size": 2,
      "formatter": [
        {
          "language_server": {
            "name": "biome"
          }
        }
      ],
      "format_on_save": "on"
    },
    "TSX": {
      "tab_size": 2,
      "formatter": [
        {
          "language_server": {
            "name": "biome"
          }
        }
      ],
      "format_on_save": "on"
    },
    "JavaScript": {
      "tab_size": 2,
      "formatter": [
        {
          "language_server": {
            "name": "biome"
          }
        }
      ],
      "format_on_save": "on"
    },
    "JSON": {
      "tab_size": 2,
      "formatter": [
        {
          "language_server": {
            "name": "biome"
          }
        }
      ],
      "format_on_save": "on"
    },
    "JSONC": {
      "tab_size": 2,
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "HTML": {
      "tab_size": 2,
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "CSS": {
      "tab_size": 2,
      "formatter": [
        {
          "language_server": {
            "name": "biome"
          }
        }
      ],
      "format_on_save": "on"
    },
    "Astro": {
      "tab_size": 2,
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "Svelte": {
      "tab_size": 2,
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "YAML": {
      "tab_size": 2,
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "TOML": {
      "tab_size": 2,
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "Markdown": {
      "tab_size": 2,
      "soft_wrap": "editor_width",
      "remove_trailing_whitespace_on_save": false,
      "format_on_save": "off",
      "show_edit_predictions": false
    },
    "Shell Script": {
      "tab_size": 2,
      "hard_tabs": false
    },
  },
  "file_types": {
    "JSONC": [
      "**/.zed/**/*.json",
      "**/zed/**/*.json",
      "**/Zed/**/*.json",
      "**/.vscode/**/*.json",
      "**/tsconfig.json",
      "**/jsconfig.json"
    ],
    "Shell Script": [
      ".env.*",
      "PKGBUILD",
      ".bashrc",
      ".zshrc",
      ".profile"
    ]
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "title_bar": {
    "show_branch_icon": false,
    "show_branch_name": true,
    "show_project_items": true,
    "show_user_picture": false,
    "show_user_menu": true,
    "show_sign_in": false,
    "show_menus": false
  },
  "confirm_quit": false,
  "middle_click_paste": true,
  "load_direnv": "direct",
  "private_files": [
    "**/.env*",
    "**/*.pem",
    "**/*.key",
    "**/*.cert",
    "**/*.crt",
    "**/secrets.yml",
    "**/credentials.json"
  ]
}
