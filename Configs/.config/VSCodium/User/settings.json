{
  // Editor settings
  "editor.fontFamily": "GeistMono Nerd Font",
  // "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.horizontal": "auto",
  "editor.scrollbar.verticalScrollbarSize": 12,
  "editor.scrollbar.horizontalScrollbarSize": 12,
  "editor.tabSize": 2,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.cursorWidth": 1,
  "editor.lineNumbers": "on",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.sortImports": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.fixAll.tslint": "explicit",
    "source.organizeImports": "explicit"
  },

  // Cursor and scrolling settings (original)
  "editor.cursorStyle": "underline",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.scrollbar.scrollByPage": false,
  "editor.mouseWheelScrollSensitivity": 2,
  "editor.fastScrollSensitivity": 5,
  "editor.renderWhitespace": "none",
  "editor.linkedEditing": true,

  // File settings
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,
  "files.trimTrailingWhitespace": true,
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },

  // Workbench and sidebar settings
  "workbench.sideBar.location": "right",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.closeOnFileDelete": true,
  "window.title": "${activeEditorShort}${separator}${rootName}",
  "extensions.ignoreRecommendations": true,
  "workbench.iconTheme": "catppuccin-mocha",
  "workbench.layoutControl.enabled": false,
  "window.menuBarVisibility": "toggle",
  "window.commandCenter": false,
  "workbench.statusBar.visible": false,
  "workbench.startupEditor": "none",

  // Performance settings (unchanged)
  "files.hotExit": "onExit",
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true
  },
  "search.useGlobalIgnoreFiles": true,
  "editor.renderControlCharacters": false,
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "update.mode": "none",
  "editor.parameterHints.enabled": false,
  "editor.hover.enabled": true,
  "editor.wordWrap": "on",

  // Inline Fold settings
  "inlineFold.regex": "(class|className)=['\"]([^'\"s]+)\\s+(https://github.com/moalamri/vscode-inline-fold/blob/HEAD/[^'\"]{30,})['\"]",
  "inlineFold.regexFlags": "g",
  "inlineFold.regexGroup": 3,
  "inlineFold.unfoldedOpacity": 0.6,
  "inlineFold.maskChar": "â€¦",
  "inlineFold.maskColor": "#000",
  "inlineFold.supportedLanguages": ["javascriptreact", "typescriptreact"],
  "inlineFold.unfoldOnLineSelect": true,
  "inlineFold.autoFold": true,
  "explorer.confirmDragAndDrop": false,

  // Development settings
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "path-autocomplete.extensionOnImport": true,
  "path-autocomplete.excludedItems": {
    "*/.js": {
      "when": "**"
    },
    "*/.jsx": {
      "when": "**"
    }
  },
  "javascript.validate.enable": false,
  "typescript.validate.enable": false,

  // Miscellaneous settings
  "keyboard.dispatch": "keyCode",
  "telemetry.telemetryLevel": "off",
  "liveServer.settings.donotShowInfoMsg": true,
  "git.openRepositoryInParentFolders": "never",
  "explorer.confirmDelete": false,
  "security.workspace.trust.untrustedFiles": "open",
  "eslint.run": "onSave",
  "explorer.compactFolders": false,
  "editor.fontLigatures": true,
  "window.confirmSaveUntitledWorkspace": false,
  "window.newWindowProfile": "Default",
  "explorer.confirmPasteNative": false,
  "editor.minimap.maxColumn": 60,
  "editor.minimap.enabled": false,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "workbench.activityBar.location": "hidden",
  "workbench.colorTheme": "Vesper",
}
